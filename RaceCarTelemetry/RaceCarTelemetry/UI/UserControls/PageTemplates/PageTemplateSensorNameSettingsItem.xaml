<UserControl x:Class="UI.UserControls.PageTemplates.PageTemplateSensorNameSettingsItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:custom="clr-namespace:UI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <custom:ImageCardButtonWithoutShadow x:Name="RemoveButton"
                                             Kind="Minus" 
                                             Foreground="{DynamicResource Delete}"
                                             Click="RemoveButton_Click"
                                             />

        <Label x:Name="SensorNameLabel"
               Grid.Column="1"
               VerticalContentAlignment="Center"
               />
    </Grid>
</UserControl>
